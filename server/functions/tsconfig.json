{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "types": ["node", "jest"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@deporty/entities": ["../../entities/dist", "../entities/dist"],
      "@deporty/entities/*": ["../../entities/dist/*", "../entities/dist/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["src/**/*.test.ts"]
}
